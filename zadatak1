    public static double a = 0, b = 0;
    public static boolean prviBroj = true;
    public static boolean jednakost = false;
    public static char operator = '+';
    public static double izvediOperaciju() {
        switch (operator) {
            case '+':
                a += b;
                break;
            case '-':
                a -= b;
                break;
            case '*':
                a *= b;
                break;
            case '/':
                a /= b;
                break;
            case '%':
                a = a * (b / 100);
                break;
        }
        return a;
    }
