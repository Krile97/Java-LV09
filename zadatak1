    private void jButton18ActionPerformed(java.awt.event.ActionEvent evt) {                                          
       if(prviBroj) {
            a = Double.parseDouble(jTextField1.getText());
            prviBroj = false;
        }
        else b = Double.parseDouble(jTextField1.getText());
        a = izvediOperaciju();
        operator = '+';
        b = 0;
        jLabel1.setText("+");
        jednakost = true;
        jTextField2.setText(String.valueOf(a));
        if(jTextField2.getText().endsWith(".0")) {
            int len = jTextField2.getText().length();
            jTextField2.setText(jTextField2.getText().substring(0, len - 2));
        }
    }                                         

    private void jButton17ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(prviBroj) {
            a = Double.parseDouble(jTextField1.getText());
            prviBroj = false;
        }
        else b = Double.parseDouble(jTextField1.getText());
        a = izvediOperaciju();
        
        operator = '-';
        b = 0;
        jLabel1.setText("-");
        jednakost = true;
        jTextField2.setText(String.valueOf(a));
        if(jTextField2.getText().endsWith(".0")) {
            int len = jTextField2.getText().length();
            jTextField2.setText(jTextField2.getText().substring(0, len - 2));
        }
    }                                         

