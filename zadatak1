    }                                         

    private void jButton20ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(prviBroj) {
            a = Double.parseDouble(jTextField1.getText());
            prviBroj = false;
        }
        else b = Double.parseDouble(jTextField1.getText());
        a = izvediOperaciju();
        operator = '/';
        b = 0;
        jLabel1.setText("/");
        jednakost = true;
        jTextField2.setText(String.valueOf(a));
        if(jTextField2.getText().endsWith(".0")) {
            int len = jTextField2.getText().length();
            jTextField2.setText(jTextField2.getText().substring(0, len - 2));
        }
    }                                         

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        a = 0;
        b = 0;
        operator = '+';
        jTextField1.setText("0");
        prviBroj = true;
        jTextField2.setText("0");
    }                                        

    private void jButton19ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(a != 0) {
        b = Double.parseDouble(jTextField1.getText());
        a = izvediOperaciju();
        jTextField1.setText(String.valueOf(a));
        if(jTextField1.getText().endsWith(".0")) {
            int len = jTextField1.getText().length();
            jTextField1.setText(jTextField1.getText().substring(0, len - 2));
        }
        a = 0;
        b = 0;
        operator = '+';
        prviBroj = true;
        jednakost = true;
        jLabel1.setText("");
        jTextField2.setText("0");
        }
    }                                         

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(jednakost) {
            jTextField1.setText("0");
            jednakost = false;
        } 
        if (!jTextField1.getText().equals("0")) {
            if (jTextField1.getText().contains("-")){
                int len = jTextField1.getText().length();
                jTextField1.setText(jTextField1.getText().substring(1, len));
            }
            else {
                String temp = jTextField1.getText();
                jTextField1.setText("-" + temp);
            }
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(prviBroj) {
            a = Double.parseDouble(jTextField1.getText());
            prviBroj = false;
        }
        else b = Double.parseDouble(jTextField1.getText());
        a = izvediOperaciju();
        operator = '%';
        b = 0;
        jednakost = true;
        jLabel1.setText("%");
        jTextField2.setText(String.valueOf(a));
        if(jTextField2.getText().endsWith(".0")) {
            int len = jTextField2.getText().length();
            jTextField2.setText(jTextField2.getText().substring(0, len - 2));
        }
    }                                        

    private void jButton15ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if (!jTextField1.getText().contains(".")) {
            if(jTextField1.getText().equals("0")) {
                jTextField1.setText("0.0");
            }
            else {
                jTextField1.setText(jTextField1.getText() + ".");
            }
        }
    }                                         

    private void jTextField2ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           

